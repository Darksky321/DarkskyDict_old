<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:background="#ffffff" >

    <TextView
        android:id="@+id/textView_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="8dp"
        android:paddingTop="5dp"
        android:text="@string/author"
        android:textColor="#000000"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView_url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/textView_author"
        android:layout_below="@id/textView_author"
        android:layout_marginTop="5dp"
        android:autoLink="web"
        android:text="@string/url"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/textView_powered"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/textView_author"
        android:layout_below="@id/textView_url"
        android:layout_marginTop="5dp"
        android:text="@string/powered" />

    <View
        android:id="@+id/horizontalLine"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/textView_powered"
        android:layout_marginTop="5dp"
        android:background="#bbbbbb"
        android:textSize="14dp" />

    <Button
        android:id="@+id/button_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/horizontalLine"
        android:background="@drawable/blank_button_selector"
        android:text="@string/ok" />

</RelativeLayout>